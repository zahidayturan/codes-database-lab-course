@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
<div class="mt-5">
    <div class="text-center">
        <h1>Welcome to the Student Management System</h1>
        <p class="lead">Manage students, departments, faculties, and courses with ease.</p>
    </div>

    <!-- Student Search Section -->
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4 class="text-center">Search Student by ID</h4>
                <form asp-controller="Student" asp-action="Search" method="post" class="d-flex justify-content-center">
                    <div class="input-group" style="max-width: 400px;">
                        <input type="number" class="form-control form-control-md" id="StudentID" name="StudentID" placeholder="Enter Student ID" required min="0">
                        <button class="btn btn-primary px-4" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Quick Access Section -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h4>Quick Access</h4>
            </div>
            <div class="col-md-10">
                <div class="row g-3 justify-content-center">
                    <!-- View Lists -->
                    <div class="col-md-3 col-sm-6">
                        <a href="/Faculty/Index" class="btn btn-primary w-100">View Faculties</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Department/Index" class="btn btn-primary w-100">View Departments</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Course/Index" class="btn btn-primary w-100">View Courses</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Student/Index" class="btn btn-primary w-100">View Students</a>
                    </div>
                    <!-- Add New -->
                    <div class="col-md-3 col-sm-6">
                        <a href="/Faculty/Create" class="btn btn-secondary w-100">Add Faculty</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Department/Create" class="btn btn-secondary w-100">Add Department</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Course/Create" class="btn btn-secondary w-100">Add Course</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a href="/Student/Create" class="btn btn-secondary w-100">Add Student</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>